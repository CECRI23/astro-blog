---
    import { SITE } from '../config'
    import { Icon } from 'astro-icon'

    const year = new Date().getFullYear()
---
<footer class="footer">
    <nav class="nav">
        <div class="span"><span>{year}  &copy; Copyright | { SITE.name }
        website with</span><a href="https://astro.build/" target="_blank" rel="noopener noreferrer">Astro</a><span>and</span><a href="https://tailwindcss.com/" target="_blank" rel="noopener noreferrer">Tailwind CSS</a>
        <span>made with</span><Icon pack="feather" name="heart" class="w-4 h-4" /><span>by</span><a href="https://github.com/Mackgame4" target="_blank" rel="noopener noreferrer">Mackgame4</a>
        </div>
        <a href="/rss.xml" title="RSS">
            <Icon pack="feather" name="rss" class="w-4 h-4" />
        </a>
    </nav>
</footer>
<style>
    .footer {
        @apply py-6 border-t
    }

    .nav {
        @apply flex justify-between items-center
    }

    .span {
        @apply text-sm text-gray-500 flex items-center space-x-2
    }

    .span span {
        @apply hidden md:inline
    }

    a {
        @apply text-gray-500 hover:text-gray-700
    }
</style>