---
import DefaultPageLayout from '../layouts/default.astro'
---

<DefaultPageLayout content={{ title: 'Error 404 - Page not found', description: 'The page you are looking for does not exist' }}>
    <p>Received a {Astro.request.method} request to {Astro.request.url}</p>
    <br>
    <a href="/">Go back to the homepage</a>
</DefaultPageLayout>

<style>
    a {
        @apply text-theme-primary dark:text-theme-primary hover:text-theme-secondary dark:hover:text-theme-secondary;
    }
</style>